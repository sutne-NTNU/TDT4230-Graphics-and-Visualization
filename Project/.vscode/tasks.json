// To use these tasks make sure the "Task Runner" extension is enabled in VSCode
// VScode must restart for changes to apply
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake",
            "type": "shell",
            "command": "cmake ..",
            "options": {
                "cwd": "build"
            },
            "presentation": {
                "clear": true,
                "echo": true,
                "focus": true,
                "showReuseMessage": false,
                "reveal": "always",
                "revealProblems": "onProblem",
                "panel": "shared",
            },
        },
        {
            "label": "Build and Run",
            "type": "shell",
            "command": "make build-and-run",
            "windows": {
                "command": "MSBuild.exe .\\TDT4230_Project.sln -consoleloggerparameters:ErrorsOnly; if ($LASTEXITCODE -eq 0) { clear | Debug\\TDT4230_Project.exe }",
                "options": {
                    "cwd": "build"
                },
            },
            "presentation": {
                "clear": true,
                "echo": true,
                "focus": true,
                "showReuseMessage": false,
                "reveal": "always",
                "revealProblems": "onProblem",
                "panel": "shared",
            },
        },
        {
            "label": "Build - Strict",
            "type": "shell",
            "command": "make build",
            "windows": {
                "command": "MSBuild.exe .\\TDT4230_Project.sln -WarnAsError -consoleloggerparameters:ErrorsOnly",
                "options": {
                    "cwd": "build"
                },
            },
            "presentation": {
                "clear": true,
                "echo": true,
                "focus": true,
                "showReuseMessage": false,
                "reveal": "always",
                "revealProblems": "onProblem",
                "panel": "shared",
            },
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "make run",
            "windows": {
                "command": "clear | Debug\\TDT4230_Project.exe",
                "options": {
                    "cwd": "build"
                },
            },
            "presentation": {
                "clear": true,
                "echo": true,
                "focus": true,
                "showReuseMessage": false,
                "reveal": "always",
                "revealProblems": "onProblem",
                "panel": "shared",
            },
        },
        {
            "label": "Clean Build Folder",
            "type": "shell",
            "command": "make clean",
            "windows": {
                "command": "echo \"not supported on windows\"",
                "options": {
                    "cwd": "build"
                },
            },
            "presentation": {
                "clear": true,
                "echo": true,
                "focus": true,
                "showReuseMessage": false,
                "reveal": "always",
                "revealProblems": "onProblem",
                "panel": "shared",
            },
        },
        {
            "label": "Render Report",
            "type": "shell",
            "command": "make",
            "windows": {
                "command": ""
            },
            "options": {
                "cwd": "report"
            },
            "presentation": {
                "clear": true,
                "echo": false,
                "focus": false,
                "showReuseMessage": false,
                "reveal": "never",
                "revealProblems": "onProblem",
                "panel": "shared",
            },
        },
    ]
}